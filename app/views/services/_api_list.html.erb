<h1>Listing Apis</h1>

<table>
  <thead>
    <tr>
      <th>Service</th>
      <th>Name</th>
      <th>Type</th>
      <th>Path</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service.apis.each do |api| %>
      <tr>
        <td><%= api.service_name %></td>
        <td><%= api.name %></td>
        <td><%= api.request_type %></td>
        <td><%= api.path %></td>
        <td><%= api.description %></td>
        <td><%= api.status %></td>
        <td><%= link_to 'Show', project_service_api_path(params[:project_id], @service.id, api.id) %></td>
        <td><%= link_to 'Edit', edit_project_service_api_path(params[:project_id], @service.id, api.id) %></td>
        <td><%= link_to 'Destroy', project_service_api_path(params[:project_id], @service.id, api.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
