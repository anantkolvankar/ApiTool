<p id="notice"><%= notice %></p>

<h1>Listing Fields</h1>

<table>
  <thead>
    <tr>
      <th>Api</th>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.api_name %></td>
        <td><%= field.name %></td>
        <td><%= field.field_type %></td>
        <td><%= field.description %></td>
        <td><%= link_to 'Show', project_service_api_field_path(params[:project_id], params[:service_id], params[:api_id], field.id) %></td>
        <td><%= link_to 'Edit', edit_project_service_api_field_path(params[:project_id], params[:service_id], params[:api_id], field.id) %></td>
        <td><%= link_to 'Destroy', project_service_api_field_path(params[:project_id], params[:service_id], params[:api_id], field.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

